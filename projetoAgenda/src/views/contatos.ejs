<div class="container my-3">
    <h1 class="text-center">Contatos</h1>

      <%- include('./includes/messages/success'); %>
      <%- include('./includes/messages/errors'); %>

      <% if(contato._id){ %>
        <form action="/contatos/edit/<%=contato._id%>" method="POST">
      <%}else{%>
      <form action="/contatos/register" method="POST">
      <% } %>
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>

            <div class="form-floating my-5">
                <input value="<%= contato.nome %>" type="text" class="form-control" id="floatingInput" name="nome" placeholder="Nome">
                <label for="floatingInput">Nome</label>
            </div>

            <div class="form-floating my-5">
                <input type="text" value="<%= contato.sobrenome %>" class="form-control" id="floatingInput" name="sobrenome" placeholder="Sobrenome">
                <label for="floatingInput">Sobrenome</label>
            </div>

            <div class="form-floating my-5">
                <input type="email" value="<%= contato.email %>" class="form-control" id="floatingInput" name="email" placeholder="E-mail">
                <label for="floatingInput">E-mail</label>
            </div>

            <div class="form-floating my-5">
                <input type="tel" value="<%= contato.telefone %>" class="form-control" id="floatingInput" name="telefone" placeholder="Telefone">
                <label for="floatingInput">Telefone</label>
            </div>
            <%if(contato._id){ %>
            <div class="text-center">
                <button type="submit" class="btn btn-dark btn-lg btn-primary mb-3 ">Atualizar</button>
            </div>
            <%}else{%>
            <div class="text-center">
                <button type="submit" class="btn btn-dark btn-lg btn-primary mb-3 ">Enviar</button>
            </div>
            <%}%>
        </form>
