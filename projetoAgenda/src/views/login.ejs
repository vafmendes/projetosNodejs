
<%- include('./includes/head/header');%>
<%- include('./includes/head/navbar');%>
<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3">
                
                <div class=" container shadow-lg py-5 col-lg-8">
                  <h1 class="text-center">Tela de Login</h1>

                  <%- include('./includes/messages/msgs'); %>

                    <form action="/login/login" method="POST">
                      <input type="hidden" name="_csrf" value=<%= csrfToken %>>

                        <div class="form-floating my-5">
                          <input type="text" class="form-control" id="floatingInput" name="email" placeholder="email">
                          <label for="floatingInput">E-mail</label>
                        </div>

                        <div class="form-floating my-5">
                          <input type="password" class="form-control" id="floatingInput" name="senha" placeholder="senha">
                          <label for="floatingInput">Senha</label>
                        </div>

                        <div class="text-center">
                          <button type="submit" class="btn btn-dark btn-lg btn-primary mb-3 ">Enviar</button>
                        </div>
                      </form>
                </div>

            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
</div>